exports.orm = function() {
	var db = Titanium.Database.open('database');
	db.execute('CREATE TABLE IF NOT EXISTS userdata (id INTEGER PRIMARY KEY, tempF TEXT, tempC TEXT, city TEXT, state TEXT, wind TEXT)');
	db.close();
	
	this.create = function(first, last, age) {
		var db = Titanium.Database.open('database');
		db.execute('INSERT INTO userdata (tempF, tempC, city, state, wind) VALUES (?, ?, ?, ?, ?)', obj.tempF, obj.tempC, obj.city, obj.state, obj.wind);
		db.close();
	};
	this.read = function() {
		var dataArray = [];
		var db = Ti.Database.open('database');
		var rows = db.execute('SELECT id, title, lastname, age FROM userdata');
		while (rows.isValidRow()) {
			dataArray.push({
				id : rows.fieldByName('id'),
				title : rows.fieldByName('title'),
				last : rows.fieldByName('lastname'),
				ageVal : rows.fieldByName('age')
			});
			rows.next();
		}
		rows.close();
		db.close();
		return dataArray;
	};
	

}; 